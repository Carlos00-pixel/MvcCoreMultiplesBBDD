@model IEnumerable<MvcCoreMultiplesBBDD.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>DETALLES</th>
            <th>BORRAR</th>
            <th>EDITAR</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                <a asp-controller="Empleados"
                    asp-action="DetallesEmpleados"
                    asp-route-idEmpleado = "@item.IdEmpleado"
                    class="btn btn-info">
                    Detalles
                </a>
            </td>
            <td>
                <a asp-controller="Empleados"
                    asp-action="Delete"
                    asp-route-id = "@item.IdEmpleado"
                    class="btn btn-danger">
                    Borrar
                </a>
            </td>
            <td>
                <a asp-controller="Empleados"
                    asp-action="EditEmpleado"
                    asp-route-id = "@item.IdEmpleado"
                    class="btn btn-dark">
                    Editar
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
